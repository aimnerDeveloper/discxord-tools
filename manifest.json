{
  "manifest_version": 3,
  "name": "Discord Token Login",
  "version": "1.2",
  "description": "Login to Discord using a token",
  "permissions": ["storage", "activeTab", "scripting"],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "128": "logo.png"
    }
  },
  "host_permissions": [
    "https://discord.com/*"
  ],
  "icons": {
    "128": "logo.png"
  }
}
